<%= @total %>

<form phx-submit="save">
    <%= select :form, :component, @components, selected: @component %>
    <button>Inc component</button>
</form>

<ul>
    <%= for value <- @components do %>
        <.live_component 
            module={IncComponent} 
            id={"inc-" <> Integer.to_string(value)} 
            value={value} />
    <% end %>
</ul>